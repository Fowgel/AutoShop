<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        @*<button class="navbar-toggler" type="button" data-toggle="collapse"  aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>*@
        <a class="navbar-brand" href="#">Autoshop</a>

        <div lass="collapse navbar-collapse" id="NavTog">
            @*onclick="location.href='@Url.Action("GetAllParentCategories", "Home")'"*@
            <div class="btn-group">
                <button type="button" id="parentCategories" class="btn btn-light" >Kategorier</button>
                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Kategorier</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Sålda bilar<span class="sr-only"></span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Information</a>
                        </li>
                    </ul>
                </div>

        </div>
        <div class="searchfilter" id="searchfilter">
            @Html.Partial("Search")
        </div>
        <div>
            <button type="button" name="Logga in" class="btn btn-light">Logga in</button>
            <button type="button" name="Registrera" class="btn btn-light">Registrera</button>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
